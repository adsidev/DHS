    </div>
    <script type="text/javascript">

        function ViewCostReportPayment(paymentId) {
            var options = { "backdrop": "static", keyboard: true };
            $.ajax({
                type: "GET",
                url: "/CostReportPayment/ViewCostReportPayment/" + paymentId,
                dataType: "html",
                success: function (evt) {
                    $('#exampleModal').html(evt);
                    $('#exampleModal').modal(options);
                    $('#exampleModal').modal('show');
                },
                error: function (req, status, error) {
                    alert("Error!Occured");
                }
            });
        }

        function EditCostReportPayment() {
            var options = { "backdrop": "static", keyboard: true };
            $.ajax({
                type: "GET",
                url: "/CostReportPayment/EditCostReportPayment",
                dataType: "html",
                success: function (evt) {
                    $('#exampleModal').html(evt);
                    $('#exampleModal').modal(options);
                    $('#exampleModal').modal('show');
                },
                error: function (req, status, error) {
                    alert("Error!Occured");
                }
            });
        }


        function SubmitValue() {
            if ($("#checkDate").val() == "") {
                alert("Please enter check date.");
                $("#checkDate").focus();
                return false;
            }
            var costReportPaymentRequest = {
                PaymentId: document.getElementById("PaymentID").value,
                CostReportPaymentEntity:
                {
                    InvoiceId: document.getElementById("InvoiceID").value,
                    VendorId: document.getElementById("VendorId").value,
                    VendorCode: document.getElementById("VendorCode").value,
                    PurchaseOrder: document.getElementById("PurchaseOrder").value,
                    InvoicePaymentAmount: parseFloat((document.getElementById("InvoicePaymentAmount").value).replace("$", "").replace(",", "")).toFixed(2),
                    Org: document.getElementById("Org").value,
                    Object: document.getElementById("Object").value,
                    Project: document.getElementById("Project").value,
                    ProjectType: document.getElementById("ProjectType").value,
                    ProjectTitle: document.getElementById("ProjectTitle").value,
                    CheckDate: document.getElementById("CheckDate").value,
                    CheckNumber: document.getElementById("CheckNumber").value,
                    CheckAmount: parseFloat((document.getElementById("CheckAmount").value).replace("$", "").replace(",", "")).toFixed(2),
                    DocumentNumber: document.getElementById("DocumentNumber").value,
                    Comments: document.getElementById("txtComments").value,
                },
            };

            $.ajax({
                url: "/CostReportPayment/SaveCostReportPayment",
                type: "POST",
                data: costReportPaymentRequest,
                dataType: 'json',
                success: function (result) {
                    location.href = "/CostReportPayment/CostReportPayments";
                },
                complete: function () {

                }
            });
            return true;
        }

    </script>
    <script type="text/javascript">

        function SelectedIndexChanged() {
            if ($("#SearchOn").val() != "" & $("#txtSearch").val() == "") {
                alert("Please enter value to search");
                $("#txtSearch").focus();
            }
            else {
                $('#frmManageCRPayment').submit();
            }
        }

        function SortOrder(SortOrder) {
            $("#hdnSortOrder").val(SortOrder)
            $('#frmManageCRPayment').submit();
        }

        function Validate() {
            alert("You don't have access to this activity. Please contact your administrator.");
            return false;
        }
       
        

        $(document).ready(function () {
            $('#mra_subli').addClass('active');
        });
    </script>
