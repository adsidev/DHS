                                    {
                                        @Html.DropDownList("PaymentTypeID", new SelectList(Model.paymentTypes, "PaymentTypeID", "PaymentTypeName", Convert.ToInt32(Common.GetSession("CRPaymentId"))), "", new { @class = "form-control mrp_modalselect" })
                                    }
                                    else
