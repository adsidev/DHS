@model DHSEntities.ProjectResponse
@using DHS.Reconcilation.Models

@{
    ViewBag.Title = "DHS Reconcilation Application:: Create Project";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
@section LeftMenuSection
{
    @Html.Partial("_menuCRPayments");
}

@using (Html.BeginForm("CreateProject", "Project", FormMethod.Post, new { @id = "frmProject" }))
{
    <title>@ViewBag.Title</title>
    <div class="tab-pane active" id="dashboard">
        <div class="container-fluid">
            <!-- top tiles -->
            <div class="mrp_content">
                <h2>Create Project</h2>

                <div class="row mra_createcost_report_payment">
                    <div class="col-lg-6">

                        <div class="row">
                            <div class="col-lg-4 col-xs-12 col-sm-4 col-md-4">
                                <div class="form_modal">
                                    <label>Fiscal&nbsp;Year</label>
                                </div>
                            </div>
                            <div class="col-lg-8 col-xs-12 col-sm-8 col-md-8">
                                <div class="form_modal">
                                    @Html.DropDownList("FiscalYearId", new SelectList(Model.fiscalYearEntities, "FiscalYearId", "FiscalYear", Model.projectEntity.FiscalYearId), "", new { @class = "form-control mrp_modalselect" })
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="col-lg-6">
                        <div class="row">
                            <div class="col-lg-4 col-xs-12 col-sm-4 col-md-4">
                                <div class="form_modal">
                                    <label>Project&nbsp;Code</label>
                                </div>
                            </div>
                            <div class="col-lg-8 col-xs-12 col-sm-8 col-md-8">
                                <div class="form_modal">
                                    @Html.TextBoxFor(m => m.projectEntity.ProjectName, htmlAttributes: new { @class = "form-control mrp_modalselect", @id = "ProjectName" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="row">
                            <div class="col-lg-4 col-xs-12 col-sm-4 col-md-4">
                                <div class="form_modal">
                                    <label>Project&nbsp;Name</label>
                                </div>
                            </div>
                            <div class="col-lg-8 col-xs-12 col-sm-8 col-md-8">
                                <div class="form_modal">
                                    @Html.TextBoxFor(m => m.projectEntity.ProjectDescription, htmlAttributes: new { @id = "ProjectDescription", @class = "form-control mrp_modalselect" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="row">
                            <div class="col-lg-4 col-xs-12 col-sm-4 col-md-4">
                                <div class="form_modal">
                                    <label>CFDA</label>
                                </div>
                            </div>
                            <div class="col-lg-8 col-xs-12 col-sm-8 col-md-8">
                                <div class="form_modal">
                                    @Html.TextBoxFor(m => m.projectEntity.CFDA, htmlAttributes: new { @id = "CFDA", @class = "form-control mrp_modalselect" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="row">
                            <div class="col-lg-4 col-xs-12 col-sm-4 col-md-4">
                                <div class="form_modal">
                                    <label>Project&nbsp;Group</label>
                                </div>
                            </div>
                            <div class="col-lg-8 col-xs-12 col-sm-8 col-md-8">
                                <div class="form_modal">
                                    @Html.DropDownList("ProjectGroupId", new SelectList(Model.projectGroupEntities, "ProjectGroupId", "ProjectGroup", Model.projectEntity.ProjectGroupId), "", new { @class = "form-control mrp_modalselect" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="row">
                            <div class="col-lg-4 col-xs-12 col-sm-4 col-md-4">
                                <div class="form_modal">
                                    <label>Expense&nbsp;Status</label>
                                </div>
                            </div>
                            <div class="col-lg-8 col-xs-12 col-sm-8 col-md-8">
                                <div class="form_modal">
                                    @Html.DropDownList("ExpenseStatusId", new SelectList(Model.projectStatusEntities, "ProjectStatusId", "ProjectStatus", Model.projectEntity.ExpenseStatusId), "", new { @class = "form-control mrp_modalselect" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="row">
                            <div class="col-lg-4 col-xs-12 col-sm-4 col-md-4">
                                <div class="form_modal">
                                    <label>Revenue&nbsp;Status</label>
                                </div>
                            </div>
                            <div class="col-lg-8 col-xs-12 col-sm-8 col-md-8">
                                <div class="form_modal">
                                    @Html.DropDownList("RevenueStatusId", new SelectList(Model.projectStatusEntities, "ProjectStatusId", "ProjectStatus", Model.projectEntity.RevenueStatusId), "", new { @class = "form-control mrp_modalselect" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="row">
                            <div class="col-lg-4 col-xs-12 col-sm-4 col-md-4">
                                <div class="form_modal">
                                    <label>Project&nbsp;Status</label>
                                </div>
                            </div>
                            <div class="col-lg-8 col-xs-12 col-sm-8 col-md-8">
                                <div class="form_modal">
                                    @Html.DropDownList("ProjectStatusId", new SelectList(Model.projectStatusEntities, "ProjectStatusId", "ProjectStatus", Model.projectEntity.ProjectStatusId), "", new { @class = "form-control mrp_modalselect" })
                                </div>
                            </div>
                        </div>
                    </div>


                </div>

                <div class="row">
                    <div class="col-lg-2 col-xs-12 col-sm-4 col-md-2">
                        <div class="form_modal">
                            <label>Notes</label>
                        </div>
                    </div>
                    <div class="col-lg-10 col-xs-12 col-sm-8 col-md-10">
                        <div class="form_modal">
                            <textarea id="ProjectNotes" name="ProjectNotes" style="margin: 0px; width: 100%; height: 80px;">@Model.projectEntity.ProjectNotes</textarea>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <input type="button" id="btnSubmit" title="Save Project Information" class="btn btn-primary btn-updated" onclick="return SubmitValue()" value="Save Changes" />
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        var IsExists = false;
         function SubmitValue() {
            if (document.getElementById("FiscalYearId").value == "") {
                alert("Please select fiscal year.")
                document.getElementById("FiscalYearId").focus();
                return false;
            }
             if (document.getElementById("ProjectName").value == "") {
                 alert("Please enter project code.");
                 document.getElementById("ProjectName").focus();
                 return false;
             }
            if (document.getElementById("ProjectDescription").value == "") {
                alert("Please enter project name.");
                document.getElementById("ProjectDescription").focus();
                return false;
             }

             if (document.getElementById("CFDA").value == "") {
                 alert("Please enter cfda.");
                 document.getElementById("CFDA").focus();
                 return false;
             }
            //
            var projectEntity = {
                ProjectId: 0,
                ProjectFiscalYearId:0,
                FiscalYearId: document.getElementById("FiscalYearId").value,
                ProjectName: document.getElementById("ProjectName").value,
                ProjectDescription: document.getElementById("ProjectDescription").value,
                CFDA: document.getElementById("CFDA").value,
                ProjectGroupId: document.getElementById("ProjectGroupId").value,
                ProjectNotes: document.getElementById("ProjectNotes").value,
                ExpenseStatusId: document.getElementById("ExpenseStatusId").value,
                RevenueStatusId: document.getElementById("RevenueStatusId").value,
                ProjectStatusId: document.getElementById("ProjectStatusId").value,
                ModifiedBy:@Common.GetSession("UserID"),
            };
            var projectRequest = {
                projectEntity: projectEntity
            };

            $.ajax({
                url: "/Project/SaveProject",
                type: "POST",
                data: projectRequest,
                dataType: 'json',
                success: function (result) {
                    window.location.reload();
                },
                complete: function () {

                }
            });
            return true;
        }

        $(document).ready(function () {
            $('#mra_subliPRC').addClass('active');
        });

       
    </script>
}