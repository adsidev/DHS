@model DHSEntities.ProjectResponse
@{
    ViewBag.Title = "View Project";
}

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="DrawModalLabel">
                View Project Information
            </h5>

            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <span class="mrp_modaledit"> <strong><i class="fa fa-pencil" aria-hidden="true" onclick="EditProject(@Model.projectEntity.ProjectFiscalYearId)"></i></strong></span>
        </div>
        <div class="modal-body">
            <div class="mrp_modalcontent">
                <div class="row">

                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-2 col-xs-12 col-sm-3 col-md-3">
                                <div class="form_modal">
                                    <label>Fiscal&nbsp;Year</label>
                                </div>
                            </div>
                            <div class="col-lg-10 col-xs-12 col-sm-9 col-md-9">
                                <div class="form_modal">
                                    @Html.TextBoxFor(m => m.projectEntity.FiscalYear, htmlAttributes: new { @class = "form-control mrp_modalselect", @disabled = "disabled" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-2 col-xs-12 col-sm-3 col-md-3">
                                <div class="form_modal">
                                    <label>Project&nbsp;Code</label>
                                </div>
                            </div>
                            <div class="col-lg-10 col-xs-12 col-sm-9 col-md-9">
                                <div class="form_modal">
                                    <input type="text" disabled="disabled" value="@Model.projectEntity.ProjectName" class="form-control mrp_modalselect" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-2 col-xs-12 col-sm-3 col-md-3">
                                <div class="form_modal">
                                    <label>CFDA</label>
                                </div>
                            </div>
                            <div class="col-lg-10 col-xs-12 col-sm-9 col-md-9">
                                <div class="form_modal">
                                    @Html.TextBoxFor(m => m.projectEntity.CFDA, htmlAttributes: new { @class = "form-control mrp_modalselect", @disabled = "disabled" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-2 col-xs-12 col-sm-3 col-md-3">
                                <div class="form_modal">
                                    <label>Project&nbsp;Name </label>
                                </div>
                            </div>
                            <div class="col-lg-10 col-xs-12 col-sm-9 col-md-9">
                                <div class="form_modal">
                                    @Html.TextBoxFor(m => m.projectEntity.ProjectDescription, htmlAttributes: new { @class = "form-control mrp_modalselect", @disabled = "disabled" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-2 col-xs-12 col-sm-3 col-md-3">
                                <div class="form_modal">
                                    <label>Project&nbsp;Group</label>
                                </div>
                            </div>
                            <div class="col-lg-10 col-xs-12 col-sm-9 col-md-9">
                                <div class="form_modal">
                                    @Html.TextBoxFor(m => m.projectEntity.ProjectGroup, htmlAttributes: new { @class = "form-control mrp_modalselect", @disabled = "disabled" })
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-2 col-xs-12 col-sm-3 col-md-3">
                                <div class="form_modal">
                                    <label>Expense&nbsp;Status</label>
                                </div>
                            </div>
                            <div class="col-lg-10 col-xs-12 col-sm-9 col-md-9">
                                <div class="form_modal">
                                    @Html.TextBoxFor(m => m.projectEntity.ExpenseStatus, htmlAttributes: new { @class = "form-control mrp_modalselect", @disabled = "disabled" })
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-2 col-xs-12 col-sm-3 col-md-3">
                                <div class="form_modal">
                                    <label>Revenue&nbsp;Status</label>
                                </div>
                            </div>
                            <div class="col-lg-10 col-xs-12 col-sm-9 col-md-9">
                                <div class="form_modal">
                                    @Html.TextBoxFor(m => m.projectEntity.RevenueStatus, htmlAttributes: new { @class = "form-control mrp_modalselect", @disabled = "disabled" })
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-2 col-xs-12 col-sm-3 col-md-3">
                                <div class="form_modal">
                                    <label>Project&nbsp;Status</label>
                                </div>
                            </div>
                            <div class="col-lg-10 col-xs-12 col-sm-9 col-md-9">
                                <div class="form_modal">
                                    @Html.TextBoxFor(m => m.projectEntity.ProjectStatus, htmlAttributes: new { @class = "form-control mrp_modalselect", @disabled = "disabled" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-2 col-xs-12 col-sm-3 col-md-3">
                                <div class="form_modal">
                                    <label>Notes:</label>
                                </div>
                            </div>
                            <div class="col-lg-10 col-xs-12 col-sm-9 col-md-9">
                                <div class="form_modal">
                                    <textarea id="ProjectNotes" name="ProjectNotes" style="margin: 0px; width: 100%; height: 120px;" disabled="disabled">@Model.projectEntity.ProjectNotes</textarea>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<script language="JavaScript">
    function EditProject(projectId) {
        var options = { "backdrop": "static", keyboard: true };
        $.ajax({
            type: "GET",
            url: "/Project/EditProject/" + projectId,
            dataType: "html",
            success: function (evt) {
                $('#ProjectModal').html(evt);
                $('#ProjectModal').modal(options);
                $('#ProjectModal').modal('show');
            },
            error: function (req, status, error) {
                alert("Error!Occured");
            }
        });
    }
</script>