@model DHSEntities.RevenueTypeResponse
@{
    ViewBag.Title = "Edit RevenueTypes";
}
@Html.HiddenFor(m => m.RevenueTypeEntity.RevenueTypeId, htmlAttributes: new { @id = "RevenueTypeId" })
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Edit Revenue Type</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <div class="modal-footer mra_edit_footer">
                <a href="Javascript:void()" title="Save" onclick="return SubmitValue()" id="btnSubmit" class="mra_edit_save">
                    <i class="fa fa-floppy-o" aria-hidden="true"></i>
                </a>
            </div>
            <div class="modal-body">
                <div class="mrp_modalcontent">
                    <h2>Revenue Type Information</h2>
                    <input type="hidden" id="RevenueTypeId" name="RevenueTypeId" value="@Model.RevenueTypeEntity.RevenueTypeId" />
                    <div class="row">

                        <div class="col-lg-12">
                            <div class="row">
                                <div class="col-lg-3 col-xs-12 col-sm-3 col-md-3">
                                    <div class="form_modal">
                                        <label>RevenueType&nbsp;Name</label>
                                    </div>
                                </div>
                                <div class="col-lg-9 col-xs-12 col-sm-9 col-md-9">
                                    <div class="form_modal">
                                        @Html.TextBoxFor(m => m.RevenueTypeEntity.RevenueTypeName, htmlAttributes: new { @id = "RevenueTypeName", @class = "form-control mrp_modalselect" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-xs-12">
                            <div class="form_modal">
                                <label>Description:</label>
                                <textarea id="RevenueTypeDescription" name="RevenueTypeDescription" style="margin: 0px; width: 100%; height: 80px;">@Model.RevenueTypeEntity.RevenueTypeDescription</textarea>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
