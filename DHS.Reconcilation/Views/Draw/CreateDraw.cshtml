                            <div class="col-lg-4 col-xs-12 col-sm-4 col-md-4">
                                <div class="form_modal">
                                    <label>Project</label>
                                </div>
                            </div>
                            <div class="col-lg-8 col-xs-12 col-sm-8 col-md-8">
                                <div class="form_modal">
                                    @Html.TextBoxFor(m => m.drawEntity.ProjectName, htmlAttributes: new { @id = "ProjectName", @class = "form-control mrp_modalselect" })
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="col-lg-6">
                        <div class="row">
                            <div class="col-lg-4 col-xs-12 col-sm-4 col-md-4">
                                <div class="form_modal">
                                    <label>Adjusted Amount</label>
                                </div>
                            </div>
                            <div class="col-lg-8 col-xs-12 col-sm-8 col-md-8">
                                <div class="form_modal">
                                    @Html.TextBoxFor(m => m.drawEntity.AdjustedAmount, htmlAttributes: new { @id = "AdjustedAmount", Value = String.Format("{0:$#,##0.00}", Model.drawEntity.AdjustedAmount), @class = "form-control mrp_modalselect" })
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="row">
                    <div class="col-lg-2 col-xs-12 col-sm-4 col-md-2">
                        <div class="form_modal">
                            <label>Notes</label>
                        </div>
                    </div>
                    <div class="col-lg-10 col-xs-12 col-sm-8 col-md-10">
                        <div class="form_modal">
                            <textarea id="DrawDescription" name="DrawDescription" style="margin: 0px; width: 100%; height: 80px;">@Model.drawEntity.DrawDescription</textarea>
                        </div>
                    </div>
                </div>


                <div class="modal-footer">
                    <input type="submit" id="btnSubmit" class="btn btn-primary btn-updated" onclick="return SubmitValue()" value="Save Changes" />
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        var IsExists = false;
        function SubmitValue() {
            if (document.getElementById("FiscalYearId").value == "") {
                alert("Please select fiscal year.")
                document.getElementById("FiscalYearId").focus();
                return false;
            }

            if (document.getElementById("DrawDownAmount").value == "$0.00" || document.getElementById("DrawDownAmount").value =="")
            {
                alert("Please enter draw amount.");
                document.getElementById("DrawDownAmount").focus();
                return false;
            }

            if (document.getElementById("DrawDownDate").value == "") {
                alert("Please enter draw date.");
                document.getElementById("DrawDownDate").focus();
                return false;
            }

            if (document.getElementById("BatchNumber").value == "") {
                alert("Please enter batch number.");
                document.getElementById("BatchNumber").focus();
                return false;
            }
            else {
                fire_ajax(document.getElementById("BatchNumber").value);
                if(IsExists)
                    return false;
            }

            if (document.getElementById("StatusId").value == "") {
                alert("Please select status.")
                document.getElementById("StatusId").focus();
                return false;
            }
            var drawEntity = {
                DrawDownDate: document.getElementById("DrawDownDate").value,
                DatePosted: document.getElementById("DatePosted").value,
                BatchNumber: document.getElementById("BatchNumber").value,
                CashReceipt: document.getElementById("CashReceipt").value,
                DrawDownAmount: parseFloat((document.getElementById("DrawDownAmount").value).replace("$", "").replace(",", "")).toFixed(2),
                DrawDescription: document.getElementById("DrawDescription").value,
                StatusId: document.getElementById("StatusId").value,
                FiscalYearId: document.getElementById("FiscalYearId").value,
                ModifiedBy:@Common.GetSession("UserID"),
                AssignedTo: document.getElementById("AssignedTo").value,
                OrgName: '',
                ObjectName: '',
                ProjectName: document.getElementById("ProjectName").value,
                AdjustedAmount: document.getElementById("AdjustedAmount").value,
            };

            var drawRequest = {
                DrawEntity: drawEntity
            };
            $.ajax({
                url: "/Draw/SaveDraw",
                type: "POST",
                data: drawRequest,
                dataType: 'json',
                success: function (result) {
                    location.href = "/Draw/ManageDraws";
                },
                complete: function () {

                }
            });
            return true;
        }

        $(document).ready(function () {
            $('#mra_subli6').addClass('active');
        });

        $("#BatchNumber").blur(function () {
            var x = $("#BatchNumber").val();
            fire_ajax(x);
        });

        function fire_ajax(s) {
            var drawEntity = {
                BatchNumber: s,
                DrawId : 0
            };
            var drawRequest = {
                drawEntity: drawEntity
            };
            $.ajax({
                url: "/Draw/CheckDrawByBatchNumber",
                type: "POST",
                data: drawRequest,
                dataType: 'json',
                success: function (data) {
                    if (data.IsExists) {
                        IsExists = data.IsExists;
                        alert("Please enter different Batch Number as this already exists.");
                        return false;
                    }
                }

            })
        }

    </script>
}