@model DHSEntities.RoleResponse
@{
    ViewBag.Title = "View Permission";
}

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="DrawModalLabel">
                View Permission Information
            </h5>

            <button type="button" class="close" data-dismiss="modal" aria-label="Close" title="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <span class="mrp_modaledit"> <strong><i class="fa fa-pencil" aria-hidden="true" onclick="EditPermission(@Model.permissionEntity.PermissionId)" title="Edit Permission Information"></i></strong></span>
        </div>
        <div class="modal-body">
            <div class="mrp_modalcontent">
                <div class="row">

                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-2 col-xs-12 col-sm-3 col-md-3">
                                <div class="form_modal">
                                    <label>Permission&nbsp;Name</label>
                                </div>
                            </div>
                            <div class="col-lg-10 col-xs-12 col-sm-9 col-md-9">
                                <div class="form_modal">
                                    @Html.TextBoxFor(m => m.permissionEntity.PermissionName, htmlAttributes: new { @class = "form-control mrp_modalselect", @disabled = "disabled" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-2 col-xs-12 col-sm-3 col-md-3">
                                <div class="form_modal">
                                    <label>Permission&nbsp;Description</label>
                                </div>
                            </div>
                            <div class="col-lg-10 col-xs-12 col-sm-9 col-md-9">
                                <div class="form_modal">
                                    @Html.TextBoxFor(m => m.permissionEntity.PermissionDescription, htmlAttributes: new { @class = "form-control mrp_modalselect", @disabled = "disabled" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script language="JavaScript">
    function EditPermission(PermissionId) {
        var options = { "backdrop": "static", keyboard: true };
        $.ajax({
            type: "GET",
            url: "/Role/EditPermission/" + PermissionId,
            dataType: "html",
            success: function (evt) {
                $('#PermissionModal').html(evt);
                $('#PermissionModal').modal(options);
                $('#PermissionModal').modal('show');
            },
            error: function (req, Permission, error) {
                alert("Error!Occured");
            }
        });
    }
</script>