@model DHSEntities.RoleResponse

@{
    ViewBag.Title = "Mdicaid Reconcilation Application :: Create Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/js/jquery.min.js"></script>

@section LeftMenuSection
{
    @Html.Partial("_menuCRPayments");

}
<title>@ViewBag.Title</title>
<form method="post" action="CreateRole" name="frmRole" id="frmRole">

    <div class="tab-pane active" id="dashboard">
        <div class="container-fluid">
            <!-- top tiles -->
            <div class="mrp_content">
                <h2>Create/Edit Role</h2>
            </div>
            <div class="row">
               <label style="color:red;">@TempData["FailureMesage"]</label>
            </div>
            <div class="mra_create_role">
                @foreach (var item in Model.LstRolePermissionEntities)
                {
                    @Html.HiddenFor(m => item.RoleId, htmlAttributes: new { @id = "RoleId" })
                    <div class="row">
                        <div class="col-lg-6 col-xs-12 col-sm-6 col-md-6 form-group">
                            <div class="form_modal">
                                <label>Role Name:</label>
                                @Html.TextBoxFor(m => item.RoleName, htmlAttributes: new { @id = "RoleName", @class = "form-control mrp_modalselect" })
                            </div>
                        </div>
                        <div class="col-lg-6 col-xs-12 col-sm-6 col-md-6 form-group">
                            <div class="form_modal">
                                <label>Role Description:</label>
                                @Html.TextAreaFor(m => item.RoleDescription, htmlAttributes: new { @id = "RoleDescription", @cols = 3, @rows = 0, @style = "width:80%", @class = "form-control mrp_modalselect" })
                            </div>
                        </div>
                    </div>
                    break;
                }

                <div class="row mrp_table-row">
                    <div class="col-lg-12 col-xs-12">
                        <div class="table-responsive">
                            <div class="mrp_contentbody mrp_contenttable">
                                <div class="mrp_table">
                                    <table class="table table-bordered table-striped" cellpadding="2" cellspacing="5">
                                        <thead>
                                            <tr>
                                                <td>
                                                    Page Name
                                                </td>
                                                <td>
                                                    View
                                                </td>
                                                <td>
                                                    Edit
                                                </td>
                                                <td>
                                                    Create
                                                </td>
                                                <td>
                                                    Delete
                                                </td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.LstRolePermissionEntities)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.TextBox("PermissionId", item.PermissionId, new { style = "display:none;" })
                                                        @item.PermissionName
                                                    </td>
                                                    <td>
                                                        @if (item.ViewBit)
                                                        {
                                                            @Html.CheckBox("View", new { @checked = "checked" });
                                                        }
                                                        else
                                                        {
                                                            @Html.CheckBox("View")
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (item.EditBit)
                                                        {
                                                            @Html.CheckBox("Edit", new { @checked = "checked" });
                                                        }
                                                        else
                                                        {
                                                            @Html.CheckBox("Edit")}
                                                    </td>
                                                    <td>
                                                        @if (item.CreateBit)
                                                        {
                                                            @Html.CheckBox("Create", new { @checked = "checked" });
                                                        }
                                                        else
                                                        {
                                                            @Html.CheckBox("Create")}
                                                    </td>
                                                    <td>
                                                        @if (item.DeleteBit)
                                                        {
                                                            @Html.CheckBox("Delete", new { @checked = "checked" });
                                                        }
                                                        else
                                                        {
                                                            @Html.CheckBox("Delete")}
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer form-group">
                    <button type="submit" class="btn btn-primary btn-updated" onclick="return ValidateFields()">Submit</button>
                    <button type="button" class="btn btn-secondary btn-close" data-dismiss="modal" onclick="location.href='Roles'">Cancel</button>
                </div>
            </div>

            <!-- /page content -->
        </div>
    </div>
</form>
<script src="~/js/jquery-3.3.1.min.js"></script>
<script type="text/javascript">

    function ValidateFields() {
        if ($("#RoleName").val() == "") {
            alert("Please enter role name.");
            $("#RoleName").focus();
            return false;
        }
        else {
            return true;
        }
    } 
    $(document).ready(function () {
        $('#mra_subli11').addClass('active');
    });
</script>