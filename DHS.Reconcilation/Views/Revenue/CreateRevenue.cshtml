                return false;
            }
            if (document.getElementById("ObjectId").value == "") {
                alert("Please select object.")
                document.getElementById("ObjectId").focus();
                return false;
            }

            if (document.getElementById("ProjectId").value == "") {
                alert("Please select project.")
                document.getElementById("ProjectId").focus();
                return false;
            }
            if (document.getElementById("StatusId").value == "") {
                alert("Please select status.")
                document.getElementById("StatusId").focus();
                return false;
            }
            if (document.getElementById("RevenueTypeId").value == "") {
                alert("Please select revenue type.")
                document.getElementById("RevenueTypeId").focus();
                return false;
            }
            if (document.getElementById("FiscalYearId").value == "") {
                alert("Please select fiscal year.")
                document.getElementById("FiscalYearId").focus();
                return false;
            }

            var revenueRequest = {
                RevenueEntity:
                {
                    PeriodId: document.getElementById("PeriodId").value,
                    SourceId: document.getElementById("SourceId").value,
                    JournalId: document.getElementById("JournalId").value,
                    RevenueDate: document.getElementById("RevenueDate").value,
                    FunctionId: document.getElementById("FunctionId").value,
                    DepartmentId: document.getElementById("DepartmentId").value,
                    ActivityId: document.getElementById("ActivityId").value,
                    OrgId: document.getElementById("OrgId").value,
                    ObjectId: document.getElementById("ObjectId").value,
                    Fund: document.getElementById("Fund").value,
                    ProjectId: document.getElementById("ProjectId").value,
                    Reference1: document.getElementById("Reference1").value,
                    Reference2: document.getElementById("Reference2").value,
                    Reference3: document.getElementById("Reference3").value,
                    Reference4: document.getElementById("Reference4").value,
                    NetAmount: parseFloat((document.getElementById("NetAmount").value).replace("$", "").replace(",", "")).toFixed(2),
                    Notes: document.getElementById("txtNotes").value,
                    StatusId: document.getElementById("StatusId").value,
                    RevenueTypeId: document.getElementById("RevenueTypeId").value,
                    FiscalYearId: document.getElementById("FiscalYearId").value,
                    ModifiedBy:@Common.GetSession("UserID"),
                    AssignedTo: document.getElementById("AssignedTo").value,
                },
            };

            $.ajax({
                url: "/Revenue/SaveRevenue",
                type: "POST",
                data: revenueRequest,
                dataType: 'json',
                success: function (result) {
                    location.href = "/Revenue/ManageRevenues";
                },
                complete: function () {

                }
            });
            return true;
        }

