<script language="JavaScript">


    function SubmitValue() {

        if (document.getElementById("StatusId").value == "") {
            alert("Please select status.")
            document.getElementById("StatusId").focus();
            return false;
        }
        //if (document.getElementById("RevenueTypeId").value == "") {
        //    alert("Please select revenue type.")
        //    document.getElementById("RevenueTypeId").focus();
        //    return false;
        //}
        alert(document.getElementById("Notes").value)
        var revenueRequest = {
            RevenueEntity:
            {
                RevenueId: document.getElementById("RevenueId").value,
                Notes: document.getElementById("Notes").value,
                StatusId: document.getElementById("StatusId").value,
                RevenueTypeId: document.getElementById("RevenueTypeId").value,
                ModifiedBy:@Common.GetSession("UserID"),
                AssignedTo: document.getElementById("AssignedTo").value,
            },
        };

        $.ajax({
            url: "/Revenue/SaveRevenue",
            type: "POST",
            data: revenueRequest,
            dataType: 'json',
            success: function (result) {
                location.href = "/Revenue/ManageRevenues";
            },
            complete: function () {

            }
        });
        return true;
    }
</script>