@model DHSEntities.UserResponse
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/js/jquery.min.js"></script>
@section LeftMenuSection
{
    @Html.Partial("_menuCRPayments");

}
<form method="post" action="Users" name="frmUser" id="frmUser">
    <input type="hidden" id="hdnUserId" name="hdnUserId" />
    <div class="tab-pane active" id="dashboard">
        <div class="container-fluid">
            <!-- top tiles -->
            <div class="row ">
                <div class="col-lg-12">
                    <div class="mrp_content">
                        <h2>View Users</h2>
                    </div>
                </div>
            </div>
            <div class="row mrp_table-row">
                <div class="col-lg-12 col-xs-12">
                    <div class="table-responsive">
                        <div class="mrp_contentbody mrp_contenttable">
                            <div class="mrp_table">
                                <table class="table table-bordered table-striped" cellpadding="2" cellspacing="5">
                                    <thead>
                                        <tr>
                                            <th>Action</th>
                                            <th>User Name</th>
                                            <th>Email</th>
                                            <th>Role</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{foreach (var item in Model.LstUserEntity)
                                            {
                                                <tr>
                                                    <td>
                                                        @if (Model.rolePermissionEntity.ViewBit)
                                                        {
                                                            <img src="~/images/view-icon.png" class="img-responsive" onclick="OpenCreateUser('@item.UserId')" style="cursor:pointer;" />
                                                        }
                                                        else
                                                        {
                                                            <img src="~/images/view-icon.png" class="img-responsive disableButton" onclick="OpenDisableUser()" style="cursor:pointer;" />
                                                        }
                                                    </td>
                                                    <td>
                                                        @item.UserName
                                                    </td>
                                                    <td nowrap>
                                                        @item.Email
                                                    </td>
                                                    <td>
                                                        @item.RoleName
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- /top tiles -->
                </div>
            </div>
            <!-- /page content -->
        </div>
    </div>
</form>
<script type="text/javascript">
    function OpenCreateUser(userId) {
        document.getElementById("hdnUserId").value = userId;
        document.forms[0].submit();
    }
    $(document).ready(function () {
        $('#mra_subli24').addClass('active');
    });
</script>
