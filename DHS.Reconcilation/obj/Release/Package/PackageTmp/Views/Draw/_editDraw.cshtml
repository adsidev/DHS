@model DHSEntities.DrawResponse
@{
    ViewBag.Title = "Exit Draws";
}
@Html.HiddenFor(m => m.drawEntity.DrawId, htmlAttributes: new { @id = "DrawId" })
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Edit Draw Information</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <div class="modal-footer mra_edit_footer">
                <a href="Javascript:void()" title="Save" onclick="return SubmitValue()" id="btnSubmit" class="mra_edit_save">
                    <i class="fa fa-floppy-o" aria-hidden="true"></i>
                </a>
            </div>
            <div class="modal-body">
                <div class="mrp_modalcontent">
                    <div class="row">

                        <div class="col-lg-12">
                            <div class="row">
                                <div class="col-lg-3 col-xs-12 col-sm-3 col-md-3">
                                    <div class="form_modal">
                                        <label>Draw&nbsp;No</label>
                                    </div>
                                </div>
                                <div class="col-lg-9 col-xs-12 col-sm-9 col-md-9">
                                    <div class="form_modal">
                                        @Html.TextBoxFor(m => m.drawEntity.DrawNumber, htmlAttributes: new { @class = "form-control mrp_modalselect", @disabled = "disabled" })
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="col-lg-12">
                            <div class="row">
                                <div class="col-lg-3 col-xs-12 col-sm-3 col-md-3">
                                    <div class="form_modal">
                                        <label>Fiscal&nbsp;Year</label>
                                    </div>
                                </div>
                                <div class="col-lg-9 col-xs-12 col-sm-9 col-md-9">
                                    <div class="form_modal">
                                        @Html.DropDownList("FiscalYearId", new SelectList(Model.fiscalYearEntities, "FiscalYearId", "FiscalYear", Model.drawEntity.FiscalYearId), "", new { @class = "form-control mrp_modalselect" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="row">
                                <div class="col-lg-3 col-xs-12 col-sm-3 col-md-3">
                                    <div class="form_modal">
                                        <label>Draw&nbsp;Down&nbsp;Date</label>
                                    </div>
                                </div>
                                <div class="col-lg-9 col-xs-12 col-sm-9 col-md-9">
                                    <div class="form_modal">
                                        @Html.TextBoxFor(m => m.drawEntity.DrawDownDate, htmlAttributes: new { @id = "DrawDownDate", @class = "form-control mrp_modalselect" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="row">
                                <div class="col-lg-3 col-xs-12 col-sm-3 col-md-3">
                                    <div class="form_modal">
                                        <label>Draw&nbsp;Down&nbsp;Amount</label>
                                    </div>
                                </div>
                                <div class="col-lg-9 col-xs-12 col-sm-9 col-md-9">
                                    <div class="form_modal">
                                        @Html.TextBoxFor(m => m.drawEntity.DarwDownAmount, htmlAttributes: new { @id = "DarwDownAmount", Value = String.Format("{0:$#,##0.00}", Model.drawEntity.DarwDownAmount), @class = "form-control mrp_modalselect" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="row">
                                <div class="col-lg-3 col-xs-12 col-sm-3 col-md-3">
                                    <div class="form_modal">
                                        <label>Date&nbsp;Posted</label>
                                    </div>
                                </div>
                                <div class="col-lg-9 col-xs-12 col-sm-9 col-md-9">
                                    <div class="form_modal">
                                        @Html.TextBoxFor(m => m.drawEntity.DatePosted, htmlAttributes: new { @id = "DatePosted", @class = "form-control mrp_modalselect" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="row">
                                <div class="col-lg-3 col-xs-12 col-sm-3 col-md-3">
                                    <div class="form_modal">
                                        <label>Batch&nbsp;Number</label>
                                    </div>
                                </div>
                                <div class="col-lg-9 col-xs-12 col-sm-9 col-md-9">
                                    <div class="form_modal">
                                        @Html.TextBoxFor(m => m.drawEntity.BatchNumber, htmlAttributes: new { @id = "BatchNumber", @class = "form-control mrp_modalselect" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="row">
                                <div class="col-lg-3 col-xs-12 col-sm-3 col-md-3">
                                    <div class="form_modal">
                                        <label>Cash&nbsp;Receipt</label>
                                    </div>
                                </div>
                                <div class="col-lg-9 col-xs-12 col-sm-9 col-md-9">
                                    <div class="form_modal">
                                        @Html.TextBoxFor(m => m.drawEntity.CashReceipt, htmlAttributes: new { @id = "CashReceipt", @class = "form-control mrp_modalselect" })
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="col-lg-12">
                            <div class="row">
                                <div class="col-lg-3 col-xs-12 col-sm-3 col-md-3">
                                    <div class="form_modal">
                                        <label>Status</label>
                                    </div>
                                </div>
                                <div class="col-lg-9 col-xs-12 col-sm-9 col-md-9">
                                    <div class="form_modal">
                                        @Html.DropDownList("StatusId", new SelectList(Model.statusEntities, "StatusId", "StatusName", Model.drawEntity.StatusId), "", new { @class = "form-control mrp_modalselect" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-xs-12">
                            <div class="form_modal">
                                <label>Description:</label>
                                <textarea id="DrawDescription" name="DrawDescription" style="margin: 0px; width: 100%; height: 80px;">@Model.drawEntity.DrawDescription</textarea>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
