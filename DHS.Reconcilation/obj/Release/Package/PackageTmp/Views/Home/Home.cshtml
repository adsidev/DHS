<div class="row mrp_table-row mra_select-tables">
    <div class="col-lg-12 col-xs-12">
        <div class="table-responsive">
            <div class="mrp_contentbody mrp_contenttable" style="text-align:center;vertical-align:middle;">
                @*@if (Model.rolePermissionEntity.EditBit)
                {
                    <img src="~/Images/Reconciliation.png" style="cursor:pointer;width:200px;height:200px;" id="btnReconciliation" />
                }
